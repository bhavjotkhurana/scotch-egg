{
    "name": "Worksheet",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Title of the worksheet"
      },
      "description": {
        "type": "string",
        "description": "Detailed description of what the worksheet covers"
      },
      "category": {
        "type": "string",
        "enum": [
          "SAT Math",
          "Algebra",
          "Geometry",
          "Calculus",
          "Statistics",
          "Trigonometry",
          "Pre-Algebra",
          "Other"
        ],
        "description": "Math subject category"
      },
      "difficulty": {
        "type": "string",
        "enum": [
          "Beginner",
          "Intermediate",
          "Advanced"
        ],
        "description": "Difficulty level"
      },
      "file_url": {
        "type": "string",
        "description": "URL to the worksheet PDF file"
      },
      "preview_image_url": {
        "type": "string",
        "description": "Preview image of the worksheet"
      },
      "download_count": {
        "type": "number",
        "default": 0,
        "description": "Number of times downloaded"
      },
      "topics": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Specific topics covered (e.g., quadratic equations, triangles)"
      },
      "pages": {
        "type": "number",
        "description": "Number of pages in the worksheet"
      }
    },
    "required": [
      "title",
      "description",
      "category",
      "difficulty",
      "file_url"
    ]
  }